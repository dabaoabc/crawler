<!DOCTYPE html>

<html>
<head>
    <% include _head %>
    <script src="../js/new_list.js"></script>
</head>
<body>
	<div class="wrap transition" id="Wrap">
        <% include _nav %>
        <section class="list-config am-g">
            <div class="am-u-sm-12 am-u-md-8 am-u-sm-centered">
                <!-- <h4>已有配置：</h4> -->
                <ol class="am-breadcrumb ol-title am-u-md-7">
				  	<li><a href="/" class="am-icon-home">首页</a></li>
				  	<li class="am-active"><%=item%></li>
				  	
				</ol>
				<span>
				  	<select id="js-selected" data-am-selected="{btnWidth: '40%', btnSize: 'sm', btnStyle: 'secondary'}">
					  <option value="all" selected>全部新闻</option>
					  <option value="signed">已标记新闻</option>
					</select>
			    </span>
                <div class="am-u-sm-12 am-u-md-12 am-u-sm-centered list_new_padding">
                <div data-am-widget="list_news" class="am-list-news am-list-news-default" >
				  	<!--列表标题-->
				    <div class="am-list-news-hd am-cf">
				       <!--带更多链接-->
				        <!-- <a href="##" class="">
				          <h2>栏目标题</h2>
				            <span class="am-list-news-more am-fr">更多 &raquo;</span>
				        </a> -->
				    </div>
				  	<div class="am-list-news-bd">
					  	<ul class="am-list">	
					  		<% for(var i=0; i < list_new.length; i++){ %>
					      	<li class="am-g am-list-item-dated" data-category="<%=list_new[i].category %>">
					            <a href="site/<%= list_new[i]._id %>" class="am-list-item-hd am-u-md-8"><%= list_new[i].title %></a>
					            <span class="am-list-date"><%= list_new[i].c_time %></span>
					      	</li>
					      	<%}%>
					  	</ul>
				    </div>
			    </div>
          	</div>
            </div>
        </section>
        
</div>
<% include _footer %>
<script>
	$(function(){
		$('.sites').addClass("am-active").siblings('li').removeClass("am-active");
	})
</script>
</body>
</html>